DEPTH		= @DEPTH@
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@
relativesrcdir = @relativesrcdir@

include $(DEPTH)/config/autoconf.mk

MODULE = embedjson
LIBRARY_NAME = embedjson
FORCE_STATIC_LIB = 1

DEFINES += -DXPCOM_GLUE
STL_FLAGS=

DEFINES += -DHAVE_VASPRINTF=1 -DHAVE_VPRINTF=1 -DHAVE_VSNPRINTF=1
DEFINES += -DHAVE_STDARG_H=1 -DHAVE_STRNCASECMP=1 -DHAVE_SYS_TYPES_H=1
DEFINES += -DHAVE_SYS_STAT_H=1 -DHAVE_FCNTL_H=1 -DHAVE_UNISTD_H=1

CSRCS = \
    printbuf.c \
    arraylist.c \
    debug.c \
    json_object.c \
    json_tokener.c \
    json_util.c \
    linkhash.c \
    $(NULL)

include $(topsrcdir)/config/rules.mk

CXXFLAGS += $(TK_CFLAGS)
CXXFLAGS := $(subst -pedantic,,$(CXXFLAGS))
