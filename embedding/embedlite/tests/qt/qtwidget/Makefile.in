DEPTH           = @DEPTH@
topsrcdir       = @top_srcdir@
srcdir          = @srcdir@
VPATH           = @srcdir@
relativesrcdir  = @relativesrcdir@

include $(DEPTH)/config/autoconf.mk

MODULE = qtqgraphicsmozview
LIBRARY_NAME = qtembedwidget
#FORCE_SHARED_LIB = 1
FORCE_STATIC_LIB = 1
DIST_INSTALL = 1

STL_FLAGS=
DEFINES += -DXPCOM_GLUE

MOCSRCS = \
    moc_qmozcontext.cpp \
    moc_qgraphicsmozview.cpp \
    moc_qdeclarativemozview.cpp \
    $(NULL)

RCCSRCS = \
    $(NULL)

HEADERS += \
    qmozcontext.h \
    qgraphicsmozview.h \
    qdeclarativemozview.h \
    $(NULL)

CPPSRCS += \
    $(MOCSRCS) \
    $(RCCSRCS) \
    qmozcontext.cpp \
    qgraphicsmozview.cpp \
    qdeclarativemozview.cpp \
    EmbedQtKeyUtils.cpp \
    $(NULL)

LOCAL_INCLUDES = \
    -I$(srcdir) \
    $(TK_CFLAGS) \
    $(NULL)

LIBS += \
    $(XPCOM_STANDALONE_GLUE_LDOPTS) \
    $(TK_LIBS) \
    $(NULL)

ifeq (EGL,$(MOZ_GL_PROVIDER))
LIBS += \
    -lGLESv2 \
    $(NULL)
endif

include $(topsrcdir)/config/rules.mk

GARBAGE += \
    $(MOCSRCS) \
    $(RCCSRCS) \
    $(NULL)
