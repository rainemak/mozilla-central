DEPTH		= @DEPTH@
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@
relativesrcdir = @relativesrcdir@

include $(DEPTH)/config/autoconf.mk

MODULE = embedchromeComponent
LIBRARY_NAME = embedchromeComponent
IS_COMPONENT = 1
GRE_MODULE = 1
FORCE_SHARED_LIB = 1

DEFINES += -DXPCOM_GLUE
STL_FLAGS=

EXTRA_DSO_LDOPTS = \
        $(XPCOM_STANDALONE_GLUE_LDOPTS) \
        $(NSPR_LIBS) \
        $(shell pkg-config --libs json) \
        $(NULL)

CPPSRCS += \
        nsEmbedChromeModule.cpp \
        EmbedChromeListener.cpp \
        $(NULL)

LOCAL_INCLUDES	= -I$(srcdir) \
    $(TK_CFLAGS) \
    $(NULL)

include $(topsrcdir)/config/rules.mk

CXXFLAGS += $(TK_CFLAGS)
CXXFLAGS := $(subst -pedantic,,$(CXXFLAGS))
